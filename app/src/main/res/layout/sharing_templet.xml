<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#1234"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="50dp">

        <ImageView
            android:id="@+id/findtupian"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/dianzanshu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="5dp"
            android:maxLines="1"
            android:text="12"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="270dp"
            android:maxLines="1"
            android:text="2018.11.22"
            android:textColor="#123"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="450dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:text="福州大学"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="270dp"
            android:maxLines="1"
            android:text="assd"
            android:textSize="18sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/touxiang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/longnvpu"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/shoucan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/shoucan" />

        <ImageView
            android:id="@+id/pinglun"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="115dp"
            android:background="@drawable/pinglun" />

        <ImageView
            android:id="@+id/dianzan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/dianzan1" />

        <TextView
            android:id="@+id/pinglunshu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="95dp"
            android:maxLines="1"
            android:text="12"
            android:textSize="13sp" />


    </RelativeLayout>
</LinearLayout>
